
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "type": "object",
      "description": "Represents a user's profile in the application.",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "username": {
          "type": "string",
          "description": "The user's display name, derived from their email."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user account was created."
        }
      },
      "required": ["email", "username", "createdAt"]
    },
    "template": {
      "title": "Legal Template",
      "type": "object",
      "description": "A template for a legal document.",
      "properties": {
        "type": {
          "type": "string"
        },
        "inputs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            }
          }
        },
        "structure": {
          "type": "string"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "lawFeed": {
      "title": "Law Feed",
      "type": "object",
      "description": "An item in the law feed.",
      "properties": {
        "title": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        },
        "link": {
          "type": "string",
          "format": "uri"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "glossary": {
      "title": "Glossary",
      "type": "object",
      "description": "A legal term and its definition.",
      "properties": {
        "term": {
          "type": "string"
        },
        "definition": {
          "type": "string"
        }
      }
    },
    "Lawyer": {
      "title": "Lawyer",
      "type": "object",
      "description": "Represents a lawyer's professional profile.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "location": {
          "type": "object",
          "properties": {
            "city": { "type": "string" },
            "state": { "type": "string" }
          }
        },
        "specializations": {
          "type": "array",
          "items": { "type": "string" }
        },
        "experience": { "type": "number" },
        "description": { "type": "string" },
        "rating": { "type": "number" },
        "isVerified": { "type": "boolean" }
      },
      "required": ["id", "name", "email", "location", "specializations", "isVerified"]
    },
    "RecentActivity": {
      "title": "Recent Activity",
      "type": "object",
      "description": "Represents a single activity item for a user.",
      "properties": {
        "action": {
          "type": "string",
          "description": "The action performed, e.g., 'Generated'."
        },
        "subject": {
          "type": "string",
          "description": "The subject of the action, e.g., 'Rental Agreement'."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the activity occurred."
        },
        "userId": {
          "type": "string",
          "description": "The UID of the user who performed the action."
        }
      },
      "required": ["action", "subject", "timestamp", "userId"]
    },
    "verificationRequest": {
        "title": "Verification Request",
        "description": "A user's request for a lawyer to verify a generated draft or a lawyer profile.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "documentType": { "type": "string" },
            "draftContent": { "type": "string" },
            "formInputs": { "type": "object" },
            "status": { "type": "string", "enum": ["pending", "reviewed", "approved"] },
            "type": { "type": "string", "enum": ["document", "lawyer"] },
            "lawyerComments": { 
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "text": { "type": "string" },
                        "timestamp": { "type": "string", "format": "date-time" }
                    }
                } 
            },
            "createdAt": { "type": "string", "format": "date-time" },
            "updatedAt": { "type": "string", "format": "date-time" },
            "lawyerNotification": { "type": "string" }
        },
        "required": ["userId", "documentType", "draftContent", "status", "createdAt", "updatedAt", "type"]
    },
    "ApprovedDraft": {
      "title": "Approved Draft",
      "description": "A legal draft that has been approved by a lawyer.",
      "type": "object",
      "properties": {
        "originalRequestId": { "type": "string" },
        "documentType": { "type": "string" },
        "approvedContent": { "type": "string" },
        "approvedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["originalRequestId", "documentType", "approvedContent", "approvedAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profiles, keyed by their Firebase Auth UID."
    },
    "/users/{userId}/activities/{activityId}": {
        "schema": {
            "$ref": "#/entities/RecentActivity"
        },
        "description": "Stores a log of recent activities for a specific user."
    },
    "/users/{userId}/approvedDrafts/{draftId}": {
      "schema": {
        "$ref": "#/entities/ApprovedDraft"
      },
      "description": "Stores legal drafts that have been approved for a specific user."
    },
    "/lawyers/{lawyerId}": {
      "schema": {
        "$ref": "#/entities/Lawyer"
      },
      "description": "Stores lawyer profiles, keyed by their unique ID."
    },
    "/templates/{templateId}": {
      "schema": {
        "$ref": "#/entities/template"
      },
      "description": "Stores legal templates with type, inputs, structure, and lastUpdated."
    },
    "/lawFeed/{updateId}": {
      "schema": {
        "$ref": "#/entities/lawFeed"
      },
      "description": "Stores law feed updates with title, summary, link, and timestamp."
    },
    "/glossary/{termId}": {
      "schema": {
        "$ref": "#/entities/glossary"
      },
      "description": "Stores legal terms and definitions."
    },
    "/verificationRequests/{requestId}": {
        "schema": {
            "$ref": "#/entities/verificationRequest"
        },
        "description": "Stores user draft and lawyer profile verification requests."
    }
  }
}
