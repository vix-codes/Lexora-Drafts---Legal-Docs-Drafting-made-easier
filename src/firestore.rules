rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isLawyer() {
      return request.auth != null
        && request.auth.token.email == 'lawyer@lexintel.com';
    }

    /** USER PROFILES **/
    match /users/{userId} {
      function isOwner() {
        return request.auth != null && request.auth.uid == userId;
      }

      allow read, write: if isOwner();

      match /activities/{activityId} {
        allow read, write: if isOwner();
      }
    }

    /** LAWYER PROFILES **/
    match /lawyers/{lawyerId} {
      function isOwner() {
        return request.auth != null && request.auth.uid == lawyerId;
      }

      allow get, list: if request.auth != null;
      allow create, update: if isOwner();
      allow delete: if false;
    }

    /** PUBLIC DATA **/
    match /templates/{templateId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /lawFeed/{updateId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /glossary/{termId} {
      allow get, list: if true;
      allow write: if false;
    }

    /** VERIFICATION REQUESTS **/
    match /verificationRequests/{requestId} {

      // Any logged-in user or server action can create
      allow create: if request.auth != null || request.time != null;

      // Allow LIST for logged-in users (needed for queries)
      allow list: if request.auth != null;

      // Lawyer can do everything
      allow read, update, delete: if isLawyer();

      // User can GET ONLY their own document
      allow get: if request.auth != null
                 && resource.data.userId == request.auth.uid;
    }
  }
}
