
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isLawyer() {
      return request.auth != null
        && request.auth.token.email == 'lawyer@lexintel.com';
    }

    /** USER PROFILES **/
    match /users/{userId} {
      function isOwner() {
        return request.auth != null && request.auth.uid == userId;
      }

      allow read, write: if isOwner();

      match /activities/{activityId} {
        allow read, write: if isOwner();
      }
    }

    /** LAWYER PROFILES **/
    match /lawyers/{lawyerId} {
      function isOwner() {
        return request.auth != null && request.auth.uid == lawyerId;
      }

      // Allow any authenticated user to view lawyer profiles
      allow get, list: if request.auth != null;
      
      // Only the lawyer can create or update their own profile
      allow create, update: if isOwner();
      
      // Prevent deletes
      allow delete: if false;
    }

    /** PUBLIC DATA **/
    match /templates/{templateId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /lawFeed/{updateId} {
      allow get, list: if true;
      allow write: if false;
    }

    match /glossary/{termId} {
      allow get, list: if true;
      allow write: if false;
    }
    
    /** VERIFICATION REQUESTS **/
    match /verificationRequests/{requestId} {
        // Logged-in users can create. Lawyers have full read/write. Users can read their own.
        allow read, write: if request.auth != null;
        allow delete: if false;
    }
  }
}
